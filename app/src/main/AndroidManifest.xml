<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pitt.cs.cs1635.mdb91.wishlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyListActivity"
            android:label="@string/title_activity_my_list"
            android:parentActivityName=".AllMyListsActivity" />
        <activity android:name=".AddEditActivity" />
        <activity
            android:name=".MainMenu"
            android:launchMode="singleTop" />
        <activity
            android:name=".OtherListActivity"
            android:parentActivityName=".Find" />
        <activity
            android:name=".Find"
            android:launchMode="singleTop"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".MyPurchases"
            android:parentActivityName=".MainMenu" />
        <activity android:name=".AllMyListsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainMenu">
        </activity>
    </application>

</manifest>